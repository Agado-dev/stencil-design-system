{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    /* Strictness */
    "strict": false,
    "module": "preserve",
    "moduleResolution": "bundler",
    "noEmit": false,
    /* AND if you're building for a library: */
    "declaration": true,
    /* AND if you're building for a library in a monorepo: */
    "composite": true,
    "declarationMap": true,
    /* your code does run in the DOM: */
    "lib": ["es2022", "dom"]
  },
  "include": ["src/**/*"]
}
